{
  "name": "PA-Evri-Net-Sec-Baseline",
  "type": "Microsoft.Authorization/policyAssignments",
  "apiVersion": "2024-04-01",
  "properties": {
    "displayName": "EVRi Network Security Baseline",
    "description": "MC: Policy Assignment for the Network Security baseline (PI-Evri-Net-Sec-Baseline).",
    "notScopes": [],
    "parameters": {},
    "nonComplianceMessages": [
      {
        "message": "NICs must not have public IPs.",
        "policyDefinitionReferenceId": "NIC-No-PublicIP-001"
      },
      {
        "message": "NICs must not enable IP forwarding.",
        "policyDefinitionReferenceId": "NIC-No-IPForward-001"
      },
      {
        "message": "Network Watcher must be enabled.",
        "policyDefinitionReferenceId": "NW-Watcher-Enabled-001"
      },
      {
        "message": "Subnets must be associated with an NSG.",
        "policyDefinitionReferenceId": "Subnets-NSG-001"
      },
      {
        "message": "NSG flow logs must be enabled.",
        "policyDefinitionReferenceId": "FlowLogs-Enabled-001"
      },
      {
        "message": "Traffic Analytics must be enabled for flow logs.",
        "policyDefinitionReferenceId": "TA-Enabled-001"
      }
    ],
    "policyDefinitionId": "/providers/Microsoft.Authorization/policySetDefinitions/PI-Evri-Net-Sec-Baseline",
    "scope": "${current_scope_resource_id}"
  },
  "location": "${default_location}",
  "identity": { "type": "SystemAssigned" }
}
